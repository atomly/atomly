{
  "name": "beast-api",
  "version": "1.0.0",
  "description": "Beast monorepo.",
  "homepage": "https://github.com/beast-app/beast-backend#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beast-app/beast-backend.git"
  },
  "license": "ISC",
  "author": "Robert Molina <rmolinamir@gmail.com>",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --ignore-scripts --force-local",
    "build": "lerna run build",
    "clean": "npm run clean-dist && npm run clean-output && npm run clean-logs",
    "clean-deps": "rm -fr node_modules && rm -fr packages/*/node_modules && rm -f package-lock.json && rm -fr */**/package-lock.json && rm -f package-lock.json && rm -fr */**/package-lock.json",
    "clean-dist": "rm -fr packages/*/*.tsbuildinfo && rm -fr packages/*/dist",
    "clean-incl-deps": "npm run clean && npm run clean-deps",
    "clean-logs": "rm -f *.log && rm -fr */**/*.log",
    "clean-output": "rm -fr output && rm -fr */**/output",
    "commit": "sh commit.sh",
    "test": "lerna run test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2"
  },
  "huskys": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "bugs": {
    "url": "https://github.com/beast-app/beast-api/issues"
  }
}
