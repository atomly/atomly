{
  "compilerOptions": {
    "baseUrl": "./packages",
    "composite": true,
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6"
    ],
    "paths": {
      "@beast/*": [
        "*/src"
      ]
    },
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ],
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts",
    "**/tests/*"
  ]
}
