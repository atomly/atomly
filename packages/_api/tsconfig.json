{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths" : {
      "@root/*": ["./src/*"],
      "@entity/*": ["./src/entity/*"],
      "@types/*": ["./src/types/*"],
      "@resolvers/*": ["./src/resolvers/*"],
      "@utils/*": ["./src/utils/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "references": [
    { "path": "../beast-entities" }
  ],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "src/migration"
  ]
}
